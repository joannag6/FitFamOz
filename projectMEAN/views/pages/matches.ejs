<!DOCTYPE html>
<html>
  <head>
    <title>My Matches</title>
    <% include ../partials/head %>
    <% include ../partials/footer%>
  </head>
  <body id="matches" ng-app="myApp" ng-controller="MatchesCtrl">
      <header>
        <% include ../partials/navbar_login%>
      </header>

    <!-- Content page for matches -->
    <div class="container-fluid">

      <!-- Sidebar filter -->
      <div class="container col-lg-4" id="sidebar-filter">
        <h4>FILTERS</h4>
        <form class="form-horizontal">
          <div class="form-group row">
            <div class="form-inline col-xs-7">
              <h5>Location</h5>
              <input class="form-control" type="text" placeholder="Suburb or Postcode">
            </div>
            <div class="form-inline col-xs-3">
              <h5>Radius</h5>
              <select class="form-control" id="radius">
                <option>5 km</option>
                <option>10 km</option>
                <option>15 km</option>
                <option>30 km</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <div class="form-inline col-xs-7">
              <h5>Activites</h5>
              <input class="form-control" type="activities" placeholder="Find an activity">
            </div>
            <div class="form-inline col-xs-3">
              <h5>Skill Level</h5>
              <select class="form-control" id="skill-level">
                <option>Low</option>
                <option>Medium</option>
                <option>High</option>
              </select>
            </div>
          </div>
          <a href="#" class="btn btn-blue" id="matches-btn">
          <i class="material-icons">add_circle_outline</i> Add an activity</a>
        </form>
      </div>

      <!-- Matches -->
      <div class="container col-lg-8" id="profile-view-content">
        <div ng-repeat="user in users">
          <div class="col-xs-10 col-sm-3 profile-view" id="profile-view">
              <div>
                <img src="/img/profilepic.jpg" alt="pp">
              </div>
              <div class="match-profile-name">
                John Smith
              </div>
              <div class="match-profile-summary">
                <table style="width:100%">
                  <tr>
                    <td>Swimming</td>
                    <td>Low</td>
                  </tr>
                  <tr>
                    <td>Hockey</td>
                    <td>High</td>
                  </tr>
                </table>
              </div>
              <button type="button" class="btn btn-blue" data-toggle="modal" data-target="#myModal" id="view-btn">
                View profile
              </button>

              <!-- Modal -->
              <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog"  id="custom-modal-body">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h3 class="modal-title">Summary</h3>
                    </div>
                    <div class="modal-body">
                      <div class="container">
                        <div class="row">
                          <div class="col-sm-3 profile-summary">
                            <div>
                              <img src="/img/profilepic.jpg" alt="pp">
                            </div>
                            <div class="profile-name">
                              John Smith
                            </div>
                            <div class="location">
                              2km away from you
                            </div>
                            <div class="action-items">
                              <div class="row">
                                <a href="#" class="btn btn-blue">Rate John</a>
                              </div>
                              <div class="row">
                                <a href="#" class="btn btn-blue">Message John</a>
                              </div>
                              <div class="row">
                                <!-- <input id="report-button" type="submit" class="btn btn-light-blue" value="Report user"
                                  onclick="return confirm('Are you sure you want to report this user?')"/> -->
                                <a class="btn btn-light-blue" ng-click="reportUser()">Report John</a>
                              </div>
                            </div>
                          </div>

                          <div class="col-sm-5 profile-details">
                            <div class="section-name">Profile Details
                            </div>
                          </div>

                          <div class="col-sm-3 recent-activities">
                            <div class="section-name">Recent Activity
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                  </div>

                </div>
              </div>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
