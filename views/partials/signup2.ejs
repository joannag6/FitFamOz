<div class="container">
  <div class="row">

    <div class="col-sm-4 col-sm-push-4 create-profile" ng-class="{facebook: !newUser}">
      <div class="section-name">
        <i class="material-icons back-button" ng-click="prevPage()">chevron_left</i>
        <span>Create your Profile</span>
      </div>

      <div class="signup-form-contents">

        <div class="btn facebook-login" ng-if="!newUser" ng-click="loginUser()"><i class="fa fa-facebook-square facebook-icon" aria-hidden="true"></i>Continue with Facebook</div>

        <div ng-if="newUser">
          <div class="input-group"> <!-- Name input -->
            <span class="input-group-addon"><i class="material-icons">person</i></span>
            <input
              id="firstname"
              type="text"
              class="form-control"
              name="firstname"
              placeholder="First name"
              ng-model="newUser.first_name"
              required>
            <input
              id="lastname"
              type="text"
              class="form-control"
              name="lastname"
              placeholder="Last name"
              ng-model="newUser.last_name"
              required>
          </div>

          <div class="input-group"> <!-- Location (suburb) input -->
            <span class="input-group-addon"><i class="material-icons">location_on</i></span>
            <input
              id="location"
              type="text"
              class="form-control"
              name="location"
              placeholder="Suburb"
              ng-model="newUser.location"
              required>
          </div>

          <div class="input-group"> <!-- Date input -->
            <span class="input-group-addon"><i class="material-icons">cake</i></span>
            <input
              id="birthday"
              type="date"
              class="form-control"
              name="birthday"
              placeholder="Birthday"
              ng-model="newUser.birthday"
              required>
          </div>

          <div class="form-group">
            <div class="row">
            <a id="continue" class="btn btn-red" ng-click="nextPage()">Continue</a> </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
