        <div class="input-group"> <!-- Name input -->
          <span class="input-group-addon"><i class="material-icons">person</i></span>
          <input
            id="firstname"
            type="text"
            class="form-control"
            name="firstname"
            placeholder="First name"
            ng-model="newUser.first_name"
            required>
          <input
            id="lastname"
            type="text"
            class="form-control"
            name="lastname"
            placeholder="Last name"
            ng-model="newUser.last_name"
            required>
        </div>

        <!-- Password input -->
